@using RunGroopWebApp.ViewModels
@model UserViewModel

<h1>Are you are you want to delete this User?</h1>

    <form method="post" asp-action="Delete" enctype="multipart/form-data">
        <input type="hidden" id="Id" name="Id" asp-for="Id" />
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" placeholder="Username">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pace">Pace</label>
            <input asp-for="Pace" class="form-control" placeholder="Pace">
            <span asp-validation-for="Pace" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Kilos">Kilos Covered</label>
            <input asp-for="Kilos" class="form-control" placeholder="Kilos Covered">
            <span asp-validation-for="Kilos" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfileImageUrl">Image</label>
            <input asp-for="ProfileImageUrl" type="file" class="form-control" placeholder="Image">
            <span asp-validation-for="ProfileImageUrl" class="text-danger"></span>
        </div>
    </form>

<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>
